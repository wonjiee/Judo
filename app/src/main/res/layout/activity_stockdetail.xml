<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:tint="@color/text_primary" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="종목 상세"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- CONTENT (스크롤 없음) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- STOCK CARD -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/cardBasic"
                    android:background="@color/card_bg"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- SYMBOL + HEART -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textSymbol"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NVDA"
                                android:textColor="@color/text_primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/btnFavorite"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_fav_off"
                                android:tint="#FF4E6A" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="NVIDIA Corporation"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="181.36"
                                android:textColor="@color/text_primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textChangePercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="-2.81%"
                                android:textColor="@color/red_down"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textMarketCap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.62T"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textCategories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="성장주, 우량주"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/textUpdatedAt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Updated 12:31"
                                android:textColor="#999999"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textShowDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="세부 지표 보기 &gt;"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:padding="4dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    android:visibility="gone"
                    android:background="@color/card_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/textDetailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세부 지표"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <!-- Row (PER) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="PER"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textPer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <!-- Row (PBR) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="PBR"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textPbr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <!-- Row (ROE) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ROE (%)"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textRoe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <!-- Row (Dividend Yield) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dividend Yield (%)"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textDividend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <!-- Row (Revenue Growth 5Y) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Revenue Growth (5Y)"
                                android:textColor="@color/text_secondary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textRevenueGrowth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!-- Back button (left aligned) -->
                        <TextView
                            android:id="@+id/textShowBasic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="&lt; 기본 정보 보기"
                            android:textColor="@color/purple_500"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </FrameLayout>


            <!-- ⭐ AI 분석 버튼 추가 -->
            <Button
                android:id="@+id/btnOpenAiAnalysis"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/purple_500"
                android:text="AI 상세 분석 보기"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


            <!-- 뉴스 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:text="뉴스"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

        </LinearLayout>

    </LinearLayout>


    <!-- LOADING OVERLAY -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/purple_500" />
    </RelativeLayout>

</FrameLayout>
