<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/homeRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Large Title -->
        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Stocks"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusTopStart="14dp"
            app:boxStrokeColor="@color/divider"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="종목명 / 티커 검색"
                android:imeOptions="actionSearch"
                android:paddingHorizontal="12dp"
                android:singleLine="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ChipGroup (TOSS STYLE, one line, fully visible) -->


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                app:chipSpacingHorizontal="6dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:text="전체"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_fav"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="관심"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_value"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="가치주"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_growth"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="성장주"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_dividend"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="배당주"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_bluechip"
                    style="@style/TossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="우량주"
                    app:chipBackgroundColor="@color/toss_chip_bg_selector" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/indexLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   SP500 + NASDAQ100"
                android:layout_marginBottom="6dp"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"/>



            <Spinner
                android:id="@+id/spinnerSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="8dp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerStocks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- 로딩 오버레이 (변경 없음) -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/purple_500" />
    </RelativeLayout>

</FrameLayout>
